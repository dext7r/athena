{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@islands/*": [
        "./islands/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@stores/*": [
        "./stores/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@static/*": [
        "./static/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "_fresh"
  ]
}
